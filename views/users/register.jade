extends ../layouts/default

block main


block content
  form.form-horizontal
    legend Create your profile
    .control-group
      label.control-label(for="username") Username
      .controls
        input#username(type="text", placeholder="Username")
    .control-group
      label.control-label(for="password") Password
      .controls
        input#password(type="password", placeholder="Password")
    .control-group
      label.control-label(for="jobtitle") Job Title
      .controls
        input#jobtitle(type="jobtitle", placeholder="Job Title")
    .control-group
      label.control-label(for="email") Email
      .controls
        input#email(type="email", placeholder="Email Address")
    legend Account Info
    .control-group
      label.control-label(for="url") Company URL 
      .controls
        input#url(type="text", placeholder="http://yourcompany.com")
    .control-group
      label.control-label(for="subdomain") Company subdomain
      .controls
        .input-append
          input#subdomain(type="text", placeholder="yoursubdomain")
          span.add-on .salsa-fresca.herokuapp.com
    .control-group
      label.control-label(for="companyname") Company name 
      .controls
        input#comanyname(type="text", placeholder="Your Company Name")
    .control-group
      label.control-label(for="size") Company Size 
      .controls
        select#size
          each item in company_size_options
            option= item
    .control-group
      label.control-label(for="phonenumber") Phone Number
      .controls
        input#phonenumber(type="text", placeholder="(555) 555-5555")
    .control-gropup
      .controls
        button#signup.btn(type="submit") Sign Up
